#newsModal{

  .modal-header{
    font-size: 24px;
  }

  .modal-content{

    .img{
      width: 100%;
      position: relative;
      img{
        width: 100%;
      }
      h3{
        position: absolute;
        bottom: 0;
        color: white;
        margin: 0;
        padding: 20px;
        text-align: left;
        background: rgba(0, 0, 0, .7);
      }
    }

    p{
      padding: 20px 20px 10px 20px;
    }

  }

}